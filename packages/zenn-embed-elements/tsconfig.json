{
  "compilerOptions": {
    "target": "es6", // important for web components
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["**/*.ts", "**/*.tsx"]
}
